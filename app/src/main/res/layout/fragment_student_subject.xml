<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.StudentSubjectFragment">

    <TextView
        android:id="@+id/student_subject_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/student_subject_prof_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/student_subject_prof_email_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_subject_name_tv"
        app:layout_constraintBottom_toTopOf="@id/student_subject_exam_date_tv"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/student_subject_prof_email_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/student_subject_prof_name_tv"
        app:layout_constraintTop_toBottomOf="@id/student_subject_name_tv"
        app:layout_constraintBottom_toTopOf="@id/student_subject_exam_date_tv"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/student_subject_exam_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/student_subject_prof_email_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/student_subject_grade_tv"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/student_subject_grade_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/student_subject_exam_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>